<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.JoiNum" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gray_50</item>
        <item name="colorPrimaryVariant">@color/gray_300</item>
        <item name="colorOnPrimary">@color/gray_800</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>

        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextAppearance.MainText" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="TextAppearance.HeaderText" parent="TextAppearance.MainText">
        <item name="android:textSize">@dimen/txt_header_size</item>
    </style>

    <style name="TextAppearance.LogoText" parent="TextAppearance.MainText">
        <item name="android:shadowColor">#40000000</item>
        <item name="android:shadowRadius">10</item>
        <item name="android:textSize">60sp</item>
    </style>

    <style name="MainButton" parent="Widget.MaterialComponents.Button">
        <item name="textAllCaps">false</item>
        <item name="android:textAppearance">@style/TextAppearance.MainText</item>
        <item name="android:textColor">@color/blue</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:background">@drawable/btn_main_ripple</item>
    </style>

    <style name="TextAppearance.HighlightedText" parent="TextAppearance.MainText">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="HighlightedButton" parent="MainButton">
        <item name="android:textAppearance">@style/TextAppearance.HighlightedText</item>
        <item name="backgroundTint">@color/blue</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>