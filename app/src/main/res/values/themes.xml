<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.JoiNum" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gray_50</item>
        <item name="colorPrimaryVariant">@color/gray_300</item>
        <item name="colorOnPrimary">@color/gray_800</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar. -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="TextAppearance.MainText" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>

    <style name="TextAppearance.HeaderText" parent="TextAppearance.MainText">
        <item name="android:textSize">@dimen/txt_header_size</item>
    </style>

    <style name="TextAppearance.LogoText" parent="TextAppearance.MainText">
        <item name="fontFamily">@font/montserrat_semibold</item>
        <item name="android:shadowColor">#40000000</item>
        <item name="android:shadowRadius">10</item>
        <item name="android:textSize">60sp</item>
    </style>

    <style name="TextAppearance.HighlightedText" parent="TextAppearance.MainText">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.HighlightedInverse" parent="TextAppearance.MainText">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="MainButton" parent="Widget.MaterialComponents.Button">
        <item name="textAllCaps">false</item>
        <item name="android:textAppearance">@style/TextAppearance.MainText</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:background">@drawable/btn_main_ripple</item>
    </style>

    <style name="HighlightedButton" parent="MainButton">
        <item name="android:textAppearance">@style/TextAppearance.HighlightedText</item>
        <item name="backgroundTint">?attr/colorSecondary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BackButton" parent="@style/Widget.MaterialComponents.Button.Icon">
        <item name="textAllCaps">false</item>
        <item name="android:textAppearance">@style/TextAppearance.MainText</item>
        <item name="android:textColor">@color/blue</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:background">@drawable/btn_main_ripple</item>
        <item name="icon">@drawable/ic_back_arrow</item>
        <item name="iconGravity">start</item>
        <item name="iconSize">20dp</item>
        <item name="iconTint">@color/blue</item>
        <item name="iconPadding">3dp</item>
    </style>

    <style name="ImageButton.Main" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:layout_margin">@dimen/dlg_margin_inner</item>
    </style>

    <style name="ImageButton.Close" parent="ImageButton.Main">
        <item name="android:background">@drawable/btn_circle_ripple</item>
        <item name="tint">@color/gray_800</item>
        <item name="android:elevation">5dp</item>
    </style>

    <style name="Switch" parent="@android:style/Widget.Material.Light.CompoundButton.Switch">
        <item name="android:textAppearance">@style/TextAppearance.MainText</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="Spinner.DropDown" parent="Widget.AppCompat.Spinner.DropDown">
        <item name="android:dropDownWidth">match_parent</item>
        <item name="android:background">@drawable/shape_spinner_rounded</item>
        <item name="android:popupBackground">@drawable/shape_spinner_rounded</item>
    </style>

</resources>